<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/backgroundCardColor">

        <FrameLayout
            android:id="@+id/vertical_bar"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            tools:background="@color/primary_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="?attr/primaryTextColor"
                tools:text="@string/description"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/text_view_item_independence"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1.6"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:drawableStart="@drawable/ic_emoticon_smile"
                    android:lines="1"
                    tools:text="@string/lorem"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_view_item_stock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:drawableStart="@drawable/ic_home_24dp"
                    android:gravity="center"
                    android:text="@string/by"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="16sp"
                    tools:text="x 20"/>

                <TextView
                    android:id="@+id/text_view_needed_for_goal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:gravity="end"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="16sp"
                    tools:text="You are OK" />

                <TextView
                    android:id="@+id/text_view_item_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textColor="?attr/primaryTextColor"
                    android:gravity="end"
                    android:textSize="16sp"
                    tools:text="$100"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/buttonSubtract"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:contentDescription="@string/lorem"
                    android:src="@drawable/selector_delete_restore" />

                <ImageView
                    android:id="@+id/button_cart_subtract"
                    android:contentDescription="@string/lorem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@drawable/ic_cart_substract_enabled"
                    android:text="@string/minus_sign"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/button_cart_to_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_move_to"
                    android:gravity="center"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="16sp"
                    android:text="0"
                    tools:text="88"
                    tools:drawableEnd="@drawable/ic_shopping_cart_24dp"/>

                <ImageView
                    android:id="@+id/button_cart_add"
                    android:contentDescription="@string/lorem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@drawable/ic_add_shopping_cart_full_enabled" />

                <TextView
                    android:id="@+id/buttonAdd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_home_plus"
                    android:paddingEnd="3dp"
                    android:paddingStart="15dp"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="16sp"
                    tools:text="10"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
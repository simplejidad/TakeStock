<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>


    </style>

    <!-- Light base activity theme -->
    <style name="ActivityTheme.Primary.Base.Light" parent="Theme.AppCompat.NoActionBar">
        <item name="primaryTextColor">#181717</item>
        <item name="secondaryTextColor">#96F4F4F6</item>
        <item name="backgroundCardColor">#ECECEC</item>
        <item name="dividerColor">#F2F2F3</item>
        <item name="badgeColor">#313131</item>
        <item name="primaryBackgroundColor">#D5D5D5</item>
    </style>

    <!-- Dark base activity theme -->
    <style name="ActivityTheme.Primary.Base.Dark"    parent="Theme.AppCompat.NoActionBar">
        <item name="primaryTextColor">#BBBBBB</item>
        <item name="secondaryTextColor">#8033343B</item>
        <item name="backgroundCardColor">#28292e</item>
        <item name="dividerColor">#F2F2F3</item>
        <item name="badgeColor">#BBBBBB</item>
        <item name="primaryBackgroundColor">#28292e</item>
    </style>


    <!-- Specific Feed activity theme -->
    <style name="MainActivityCommunicatorThemeLight" parent="ActivityTheme.Primary.Base.Light">
        <item name="android:windowBackground">@color/backgroundColorLight</item>
    </style>

    <style name="MainActivityCommunicatorThemeDark" parent="ActivityTheme.Primary.Base.Dark">
        <item name="android:windowBackground">@color/backgroundColorDark</item>
    </style>


</resources>